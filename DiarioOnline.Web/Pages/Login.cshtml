@page
@model DiarioOnline.Web.Pages.LoginModel

<link rel="stylesheet" href="@Url.Content("~/css/login.css")" asp-append-version="true" />

<div class="d-flex justify-content-center">
    <div class="box align-self-center">
        <form method="post">
            <div class="input-box">
                <h2>Sign In</h2>
                <input asp-for="User.Login" required>
                <span>Usuário</span>
                <i></i>
            </div>
            <span class="text-danger mt-1" asp-validation-for="User.Login"></span>
            
            <div class="input-box">
                <input type="password" asp-for="User.Password" required>
                <span>Senha</span>
                
                <i></i>
            </div>
            <span class="text-danger mt-1" asp-validation-for="User.Password"></span>
            <input id="btnLogin" class="color-change" type="submit" value="Login">
            
            <div class="links">
                <a asp-page="Signup" >Sign Up</a>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).on('ready', function () {
        $('#btnLogin').on('click', function () {
            global.ui.showLoading();
        })
    })
    
</script>